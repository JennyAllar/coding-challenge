<div class="panel-footer">
  <div class="btn-group btn-group-justified" role="group" aria-label="...">
    <div class="panel panel-default">
      <div class="panel-heading">Founders</div>
      <div class="panel-body">
        <div class="col-md-4 align-right margin-top-lg">
          <%= button_to "Add Founder", new_company_founder_path(company_id: @company.id), method: "get", form: {style: 'display:inline-block;'}, class: 'btn btn-primary'%>
        </div>
        <div class="col-md-8">
          <% @founders.each do |founder| %>
          <div class="col-md-6">
              <span id="founder-name"><%= founder.full_name %>: <em><%= founder.title %></em></span>
              [<%= link_to 'x', [founder.company, founder], :method => :delete, form: {style: 'display:inline-block;'}, data: { confirm: "Are you sure you want to delete #{founder.full_name}?" } %>]
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
